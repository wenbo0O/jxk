{
  "compilerOptions": {
    "target": "es2018",
    "module": "node16",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "outDir": "lib/types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
